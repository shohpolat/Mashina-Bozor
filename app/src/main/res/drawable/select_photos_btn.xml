<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#BD6060" />
            <corners android:radius="50dp" />

            <stroke android:width="1dp" android:color="#03FF0F" />
        </shape>

    </item>

    <item>
        <shape>
            <gradient android:angle="0" android:endColor="#A12F2F" android:startColor="#F30404" />
            <corners android:radius="50dp" />

            <stroke android:width="1dp" android:color="#03FF0F" />
        </shape>
    </item>

</selector>