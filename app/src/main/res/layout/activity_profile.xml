<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Veiws.ProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#32D8B1"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/profile_back_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_back"
            android:layout_margin="10dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="22sp"
            android:fontFamily="@font/comic"
            android:gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edit_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        tools:text="andaskdnakjd"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar"/>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#70FB25"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/edit_name_text"
        app:layout_constraintLeft_toLeftOf="@id/edit_name_text"
        app:layout_constraintRight_toRightOf="@id/edit_name_text"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/profile_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="saqlash"
            android:textSize="18sp"
            android:background="?selectableItemBackground"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>