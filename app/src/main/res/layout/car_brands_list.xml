<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">



    <TextView
        android:id="@+id/car_brand"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="markalar"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAllCaps="true"
        android:layout_alignBottom="@id/car_logo"
        android:layout_alignTop="@id/car_logo"
        android:gravity="center"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/car_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/line"
        android:layout_below="@id/car_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_________________________________________________________________________________________"
        android:maxLines="1"
        android:textColor="@android:color/black"/>
</RelativeLayout>