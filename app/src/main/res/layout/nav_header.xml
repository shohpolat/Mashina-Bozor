<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@drawable/header_bg">

    <ImageView
        android:id="@+id/nav_header"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/malibu2"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/prof_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/timesbd"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Abdusamatov\nShohruxbek"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <ImageButton
        android:id="@+id/edit_Profile_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/pen_bg"
        android:src="@drawable/ic_pen"
        app:layout_constraintTop_toTopOf="@id/prof_name"
        app:layout_constraintBottom_toBottomOf="@id/prof_name"
        app:layout_constraintLeft_toRightOf="@id/prof_name"
        android:layout_marginLeft="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>